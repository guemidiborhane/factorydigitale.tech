{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "i18n/*": [
        "i18n/*"
      ],
      "~/*": [
        "static/*"
      ],
      "@/*": [
        "pkg/*"
      ],
      "ui/*": [
        "ui/*"
      ],
      "ws": [
        "internal/websocket/index"
      ],
      "ws/*": [
        "internal/websocket/*"
      ]
    }
  },
  "include": [
    "i18n/",
    "static/",
    "pkg/",
    "ui/",
    "internal/websocket/"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
